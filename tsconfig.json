{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ES2017",
    "declaration": false
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
